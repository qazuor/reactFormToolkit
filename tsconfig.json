{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"target": "ES2020",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"isolatedModules": true,
		"declaration": true,
		"declarationDir": "dist",
		"jsx": "react-jsx",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"outDir": "dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "src/tests"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
